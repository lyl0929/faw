<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.nua.faw.widget.TitleToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:backIcon="@mipmap/ic_arrow_back_white"
        app:backTextAppearance="?attr/actionMenuTextAppearance"
        app:backTextColor="@android:color/white"
        app:backVisible="true"
        app:subtitle=""
        app:subtitleTextAppearance="@style/TextAppearance.SubTitle"
        app:subtitleTextColor="@color/text_title_color_1"
        app:subtitleVisible="true"
        app:title=""
        app:titleTextAppearance="@style/Title_Appearance"
        app:titleTextColor="@color/text_title_color_1"
        app:title_gravity="center" />


    <!--<com.fulitai.bottomsheet.BottomSheetLayout-->
    <!--android:id="@+id/bottomsheet"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.amap.api.maps.TextureMapView
            android:id="@+id/textureMapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </com.amap.api.maps.TextureMapView>







        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="60dp"
            android:src="@mipmap/im_loction_return_nomarl"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />


    </android.support.constraint.ConstraintLayout>


    <!--</com.fulitai.bottomsheet.BottomSheetLayout>-->
</LinearLayout>